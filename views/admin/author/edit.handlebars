{{#section 'styles'}}
    <link rel="stylesheet" href="/assets/css/bootstrap-datetimepicker.css">
{{/section}}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Authors</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                        <li class="breadcrumb-item"><a href="/admin/authors">Authors</a></li>
                        <li class="breadcrumb-item active">edit</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-sm-8 offset-2">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Edit {{author.fname}}</h3>
                    </div>
                    <!-- form start -->
                    <form role="form" method="post" action="/admin/authors/{{author._id}}/update" enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="fname">First Name</label>
                                <input type="text" class="form-control" name="fname" id="fname" value="{{author.fname}}"
                                       placeholder="first name">
                            </div>

                            <div class="form-group">
                                <label for="lname">Last Name</label>
                                <input type="text" class="form-control" name="lname" id="lname" value="{{author.lname}}" placeholder="last name">
                            </div>
                            <div class="form-group">
                                <label for="fname">Date of birth</label>
                                <input type="date" class="form-control" name="dob" id="datetimepicker" value="{{author.dob}}">
                            </div>
                            <div class="form-group">
                                <label for="avatar">Avatar</label>
                                <input type="file" class="form-control" name="avatar" id="avatar">
                            </div>
                            <div class="form-group">
                                <img src="/{{author.image}}" width="250px">
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>


