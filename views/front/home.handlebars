{{> layout/slider }}
<!-- Category Area Start-->
<section class="category-area section-padding30">
    <div class="container-fluid">
        <!-- Section Tittle -->
        <div class="row">
            <div class="col-lg-12">
                <div class="section-tittle text-center mb-85">
                    <h2 style="position: relative; bottom: 185px;">Top Books</h2>
                </div>
            </div>
        </div>
        <div class="row">

            {{!--============== Each Top Books ============--}}
            
            {{#each docs}}
            <div class="col-xl-4 col-lg-6" style="position: relative; bottom: 200px;">
                <div class="single-category mb-30">
                    <div class="category-img">
                        <img style="width: 200px; height: 280px;" src="/{{image}}" alt="">

                        <div class="category-caption" style="position: relative; bottom: -50px;">
                            <h5>{{author.fname}} {{author.lname}}</h5>
                            <span class="best"><a href="/book/{{_id}}">Show Book</a></span>
                            <span class="collection">Details</span>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
            {{!-- =============================The end============================= --}}
            

            {{!-- =================================The authors======================== --}}
           <h1  style="position: absolute; top: 1750px; left:550px">Top Authors</h1>
           

            {{#each authors}}
            <div class="col-xl-4 col-lg-6">
                <div class="single-category mb-30">
                    <div class="category-img" style="position: relative; top: -50px;">
                        <img style="width: 200px; height: 280px;" src="/{{image}}" alt="">

                        <div class="category-caption" style="position: relative; bottom: -50px;">
                            <h5>{{fname}} {{lname}}</h5>
                            {{!-- <span class="best"><a href="/book/{{_id}}">Show Book</a></span> --}}
                            <span class="best"><a href="/authors/{{_id}}">Show Author</a></span>
                            <span class="collection">Details</span>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}


           <h1  style="position: absolute; top: 2700px; left:550px">Top Categories</h1>
            {{#each categories}}
            <div class="col-xl-4 col-lg-6" style="position: static;">
                <div class="single-category mb-30">
                    <div class="category-img" style="position: relative; top: 100px; left:50px">
                        
                        <span class="fa fa-book fa-2x " style="position: relative;" >
                            <div class="category-caption" style="position: relative; bottom: -50px;">
                                <a href="category/{{_id}}">
                                <h2 style="position: relative; bottom:17px;">{{name}}</h2>
                                
                                </a>
                            </div>
                        </span>
                    </div>
                </div>
            </div>
            
            {{/each}}
           

