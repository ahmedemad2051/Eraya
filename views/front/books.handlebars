<section class="latest-product-area">
    <div class="container mt-4">
        <div class="header mb-10">
            <h3 class="text-muted">
                <span class="fa fa-book fa-2x "aria-hidden="true"></span>
                <span>Books</span>
            </h3>
        </div>
        <div class="row product-btn d-flex justify-content-between">
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                    <div class="row">

                        {{#each books}}

                        <div class="col-xl-4 col-lg-4 col-md-6">
                            <div class="card single-product mb-60 shadow mb-2 bg-white rounded">
                                <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
                                <div class="card-body">
                                    <div class="product-caption">
                                        <div class="product-ratting">
                                            <i class="far fa-star"></i>
                                            <i class="far fa-star"></i>
                                            <i class="far fa-star"></i>
                                            <i class="far fa-star low-star"></i>
                                            <i class="far fa-star low-star"></i>
                                        </div>
                                        <div class="card-text">
                                            <span class="text-muted">Name:</span>  <a href="#" style="color: #00b1ff;">{{this.name}}</a><br/>
                                            <span class="text-muted">Author:</span> <a href="#" style="color: #00b1ff;">{{this.author.name}}</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>