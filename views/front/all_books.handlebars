{{#section 'styles'}}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.3.2/jquery.rateyo.min.css">
    <style>
        .pagination-sm > li > a{
            color: #0b0b0b;
        }
        .pagination>li{
            border: 1px solid;
            padding: 8px;
            border-radius: 50%;
            margin-right: 5px;
        }
        .pagination>li>a, .pagination>li>span { border-radius: 50% !important;margin: 0 5px;}
    </style>
{{/section}}
<!-- Latest Products Start -->
        <section class="latest-product-area latest-padding">
            <div class="container">
                <div class="row product-btn d-flex justify-content-between">
                        <div class="properties__button">
                            <!--Nav Button  -->
                            <nav>                                                                                                
                                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                    <a class="nav-item nav-link {{#if allTab}}active{{/if}}" id="nav-home-tab"  href="/profile" role="tab" aria-controls="nav-home" aria-selected="false">All</a>
                                    <a class="nav-item nav-link {{#if finishTab}}active{{/if}}" id="nav-profile-tab"  href="/profile/finished" role="tab" aria-controls="nav-profile" aria-selected="false">Read</a>
                                    <a class="nav-item nav-link {{#if currentTab}}active{{/if}}" id="nav-contact-tab"  href="/profile/current" role="tab" aria-controls="nav-contact" aria-selected="false">Currently Reading</a>
                                    <a class="nav-item nav-link {{#if readTab}}active{{/if}}" id="nav-last-tab"  href="/profile/read" role="tab" aria-controls="nav-contact" aria-selected="false">Want To Read</a>
                                </div>

                           
                            </nav>
                            <!--End Nav Button  -->
                            </div>
    <div class="container">
      <div class="cart_inner">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                 <th scope="col">cover</th>
                 <th scope="col"></th>
                 <th scope="col">Name</th>
                 <th scope="col">Author</th>
                 <th scope="col">Avg Rate</th>
                 <th scope="col">shelve</th>
              </tr>
            </thead>
            <tbody>
              {{#each books}}
              <tr>
                <td>
                  <div class="media">
                    <div class="d-flex">
                        <img src="/{{ book.image }}" width="200px">
                    </div>
                    <td>
                    </td>
                     <td>
                      <div class="media-body">
                       <p>
                         <a href="/book/{{book._id}}" style="color: #00b1ff;">{{book.name}}</a><br/>
                       </p>
                    </div>
                    </td>
                    <td>
                      <div class="media-body">
                       <a href="/authors/{{book.author._id}}"
                                             style="color: #00b1ff;">{{ book.author.fname }} </a><br/>
                    </div>
                    </td>
                  </div>
                </td>
                <td>
                      <div class="media-body">
                       <div id="rateYo{{_id}}" ></div>
                    </div>
                </td>
                <td>
                  <form action="/profile" method="POST">
                  <input type="hidden" name="book_id" value="{{book._id}}">
                    <select class="shipping_select" onchange="this.form.submit()" name="selectedBook">
                     {{#select shelve}}
                      <option value="finished">Read</option>
                      <option value="current">Currently Readinga</option>
                      <option value="read">Want to Read</option>
                                    {{/select}}
                                    </select>
                  </form>
                </td>
              </tr>
               {{/each}}
            </tbody>
          </table>
        </div>
            <!-- Pagination   -->
        {{{paginateHelper pagination }}}
      </div>
  

        </section>

{{#section 'scripts'}}
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.3.2/jquery.rateyo.min.js"></script>
    <script>
        $(document).ready(function () {
            {{#each books}}
                $("#rateYo{{_id}}").rateYo({
                    rating: "{{book.avgRate}}",
                    starWidth: "20px",
                    readOnly: true
                });

            {{/each}}
        });

    </script>

{{/section}}