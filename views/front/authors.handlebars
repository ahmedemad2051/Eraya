{{#section 'styles'}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.3.2/jquery.rateyo.min.css">
    <style>
        /*------------------Book Rating-----------------------*/
        .pagination-sm > li > a{
            color: #0b0b0b;
        }
        .pagination>li{
            border: 1px solid;
            padding: 8px;
            border-radius: 50%;
            margin-right: 5px;
        }
        .pagination>li>a, .pagination>li>span { border-radius: 50% !important;margin: 0 5px;}
    </style>
{{/section}}

<div class="container mt-4">
    <div class="header mb-10">
        <h3 class="text-muted">
            <span class="fa fa-book fa-2x "aria-hidden="true"></span>
            <span>Authors</span>
        </h3>
    </div>
    <br/>
    <div class="row">
        <!--                   <div class="card-deck">-->
        {{#each authors}}

            <!--                            <div class="col-sm-3">-->
            <div class="card mb-4  ml-1 mr-1  shadow  bg-white rounded col-md-3" style="height: 350px;">
                <img class="card-img-top" src="/{{image}}" alt="Card image cap" style="height: 70%">
                <div class="card-body">

                    <div class="card-text text-center">
                         <a href="/authors/{{_id}}" style="color: #00b1ff;">{{fname}} {{lname}}</a><br/>
                    </div>
                </div>
            </div>

            <!--                            </div>-->
        {{/each}}
    </div>
    <!--                   </div>-->
    <!-- Pagination   -->
    <div style="margin-left: 350px;">  {{{ paginateHelper pagination }}} </div>

</div>



