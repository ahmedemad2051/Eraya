{{#section 'styles'}}
    <style>
        .pagination-sm > li > a{
            color: #0b0b0b;
        }
        .pagination>li{
            border: 1px solid;
            padding: 8px;
            border-radius: 50%;
            margin-right: 5px;
        }
        .pagination>li>a, .pagination>li>span { border-radius: 50% !important;margin: 0 5px;}
    </style>
{{/section}}
<section class="latest-product-area">
    <div class="container mt-4">
        <div class="header mb-10">
            <h3 class="text-muted">
                <span class="fa fa-book fa-2x "aria-hidden="true"></span>
                <span>Category Name</span>
            </h3>
        </div>
        <div class="row product-btn d-flex justify-content-between">
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">


                        {{#each books}}

                            <div class="col-md-6">
                                <div class="card single-product mb-60 shadow mb-2 bg-white rounded">
                                    <img class="card-img-top" src="/{{image}}" alt="Card image cap">
                                    <div class="card-body">
                                        <div class="product-caption">
                                            <div class="product-ratting">
                                                <i class="far fa-star"></i>
                                                <i class="far fa-star"></i>
                                                <i class="far fa-star"></i>
                                                <i class="far fa-star low-star"></i>
                                                <i class="far fa-star low-star"></i>
                                            </div>
                                            <div class="card-text">
                                                <span class="text-muted">Name:</span>  <a href="#" style="color: #00b1ff;">{{name}}</a><br/>
                                                <span class="text-muted">Author:</span> <a href="#" style="color: #00b1ff;">{{ author.fname }} {{ author.lname }}</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                </div>
            </div>
        </div>

        <!-- Pagination   -->
        {{{paginateHelper pagination }}}
    </div>
</section>

